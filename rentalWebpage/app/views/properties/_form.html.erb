<%= form_for(@property) do |f| %>
  <% if @property.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@property.errors.count, "error") %> prohibited this add_property from being saved:</h2>

      <ul>
      <% @property.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :address, "Address:" %><br>
    <%= f.text_field :address %>
    <%=" (required)" %>
  </div>
  <div class="field">
    <%= f.label :apartment, "Apt/Unit/Suite" %><br>
    <%= f.text_field :apartment %>
  </div>
  <div class="field">
    <%= f.label :city, "City:" %><br>
    <%= f.text_field :city %>
    <%=" (required)" %>
  </div>
  <div class="field">
    <%= f.label :state, "State:" %><br>
    
    <%= f.select(:state, ["AK", "AL", "AR", "AZ", "CA", "CO", "CT", "DC", "DE", "FL", "GA", "HI", "IA",  "ID", "IL", "IN", "KS", "KY", "LA", "MA", "MD", "ME",  "MI", "MN", "MO", "MS", "MT", "NC", "ND", "NE", "NH", "NJ", "NM", "NV", "NY", "OH", "OK", "OR", "PA", "RI", "SC", "SD", "TN", "TX", "UT", "VA", "VT", "WA", "WI", "WV", "WY"], {:include_blank => "WI"}) %>
    <%=" (required)" %>
  </div>
  <div class="field">
    <%= f.label :zipcode, "Zipcode:" %><br>
    <%= f.text_field :zipcode %>
    <%=" (required)" %>
  </div>
  <div class="field">
    <%= f.label :rooms, "Number of Bedrooms:" %><br>
    <%= f.number_field :rooms %>
  </div>
  <div class="field">
    <%= f.label :bathrooms, "Number of Bathrooms:" %><br>
    <%= f.number_field :bathrooms %>
  </div>
  <div class="actions">
    <% if @property.id.nil? %>
      <%= f.submit "Add Property" %>
    <% else %>
      <%= f.submit "Update Property"%>
    <% end %>
  </div>
<% end %>
